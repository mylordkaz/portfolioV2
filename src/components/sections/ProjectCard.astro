---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
	description: string;
	imageUrl: ImageMetadata;
	tags: string[];
	projectUrl: string;
}

const { description, imageUrl, tags, projectUrl } = Astro.props;
---

<div
	class="relative bg-light-surface-main dark:bg-dark-surface-main rounded-xl shadow-lg overflow-hidden h-[340px] w-[300px] border border-light-border-light dark:border-dark-border-light"
>
	<Image
		src={imageUrl}
		alt={description}
		width={600}
		height={320}
		class="w-full h-44 object-cover"
		format="webp"
		quality={100}
	/>
	<div class="p-8">
		<p class="text-light-text-secondary dark:text-dark-text-secondary mb-4">
			{description}
		</p>

		<div class="flex flex-wrap gap-1.5 mb-4">
			{
				tags.map((tag) => (
					<span class="px-2 py-0.5 bg-light-hover-light dark:bg-dark-hover-light text-light-text-secondary dark:text-dark-text-secondary rounded-full text-xs">
						{tag}
					</span>
				))
			}
		</div>
		<a
			href={projectUrl}
			class="inline-block px-4 py-1.5 bg-light-text-accent dark:bg-dark-text-accent
			text-white rounded-2xl hover:opacity-90 transition-all"
			target="_blank"
			rel="noopener
			noreferrer"
		>
			View
		</a>
	</div>
</div>
