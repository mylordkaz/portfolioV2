---
import translations from "../../i18n";

const currentPath = Astro.url.pathname;
const lang = currentPath.split("/")[1] || "en";
const t = translations[lang as keyof typeof translations];
---

<footer class="bg-light-surface-footer dark:bg-dark-surface-footer">
	<div class="container mx-auto px-4 py-8">
		<div class="flex justify-between items-center">
			<!-- Personal Info -->
			<div>
				<h3
					class="font-bold text-xl text-light-text-primary dark:text-dark-text-primary"
				>
					Kevin Tim
				</h3>
				<p class="text-light-text-secondary dark:text-dark-text-secondary">
					{t.footer.softwareEngineer}
				</p>
			</div>

			<!-- Social Links -->
			<div class="flex gap-6">
				<a
					href="https://github.com/kevin-tim"
					class="text-light-text-secondary dark:text-dark-text-secondary hover:text-light-text-accent dark:hover:text-dark-text-accent transition-colors"
					target="_blank"
					rel="noopener noreferrer"
				>
					GitHub
				</a>
				<a
					href="https://linkedin.com/in/kevin-tim"
					class="text-light-text-secondary dark:text-dark-text-secondary hover:text-light-text-accent dark:hover:text-dark-text-accent transition-colors"
					target="_blank"
					rel="noopener noreferrer"
				>
					LinkedIn
				</a>
				<a
					href="mailto:contact@kevin-tim.dev"
					class="text-light-text-secondary dark:text-dark-text-secondary hover:text-light-text-accent dark:hover:text-dark-text-accent transition-colors"
				>
					Email
				</a>
			</div>
		</div>

		<!-- Optional: Add copyright or additional info -->
		<div
			class="mt-6 text-center text-light-text-muted dark:text-dark-text-muted text-sm"
		>
			Â© {new Date().getFullYear()} Kevin Tim. All rights reserved.
		</div>
	</div>
</footer>
