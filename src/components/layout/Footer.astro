---
import translations from "../../i18n";

const currentPath = Astro.url.pathname;
const lang = currentPath.split("/")[1] || "en";
const t = translations[lang as keyof typeof translations];
---

<footer class="bg-gray-100 dark:bg-gray-800 mt-20">
	<div class="container mx-auto px-4 py-8">
		<div class="flex justify-between items-center">
			<div>
				<h3 class="font-bold text-xl">Kevin Tim</h3>
				<p class="text-gray-600 dark:text-gray-400">
					{t.footer.softwareEngineer}
				</p>
			</div>
			<div class="flex gap-6">
				<a
					href="https://github.com/kevin-tim"
					class="hover:text-blue-600 transition-colors"
					target="_blank"
					rel="noopener noreferrer">GitHub</a
				>
				<a
					href="https://linkedin.com/in/kevin-tim"
					class="hover:text-blue-600 transition-colors"
					target="_blank"
					rel="noopener noreferrer">LinkedIn</a
				>
				<a
					href="mailto:contact@kevin-tim.dev"
					class="hover:text-blue-600 transition-colors">Email</a
				>
			</div>
		</div>
	</div>
</footer>
