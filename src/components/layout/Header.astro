---
import { Image } from "astro:assets";
import logoLight from "../../assets/logo-light.svg";
import logoDark from "../../assets/logo-dark.svg";
import ThemeToggle from "../common/ThemeToggle.astro";
import LanguageSwitch from "../common/LanguageSwitch.astro";
import translations from "../../i18n";

const currentPath = Astro.url.pathname;
const lang = currentPath.split("/")[1] || "en";
const t = translations[lang as keyof typeof translations];
---

<header
	class="bg-light-surface-header dark:bg-dark-surface-header w-full shadow-sm"
>
	<div class="mx-auto px-2">
		<div class="flex justify-between items-center h-24">
			<!-- Logo - Left -->
			<div class="flex-shrink-0 pl-8">
				<a href={`/${lang}`} class="flex items-center gap-2">
					<Image
						src={logoLight}
						alt="Portfolio Logo"
						width={80}
						height={80}
						class="w-20 h-20 block dark:hidden"
					/>
					<Image
						src={logoDark}
						alt="Portfolio Logo"
						width={80}
						height={80}
						class="w-20 h-20 hidden dark:block"
					/>
					<span
						class="text-2xl hidden md:block md:text-4xl font-semibold text-light-text-primary dark:text-dark-text-primary"
						>Kevin Tim.</span
					>
				</a>
			</div>
			<!-- Desktop Navigation -->
			<nav class="hidden md:flex flex-1 justify-center">
				<ul class="flex gap-8">
					<li>
						<a
							href={`/${lang}/projects`}
							class="text-lg text-light-text-secondary dark:text-dark-text-secondary hover:text-light-text-accent dark:hover:text-dark-text-accent transition-colors"
						>
							{t.nav.projects} .
						</a>
					</li>
					<li>
						<a
							href="#expertise"
							class="text-lg text-light-text-secondary dark:text-dark-text-secondary hover:text-light-text-accent dark:hover:text-dark-text-accent transition-colors"
						>
							{t.nav.expertise} .
						</a>
					</li>
					<li>
						<a
							href="#about"
							class="text-lg text-light-text-secondary dark:text-dark-text-secondary hover:text-light-text-accent dark:hover:text-dark-text-accent transition-colors"
						>
							{t.nav.about} .
						</a>
					</li>
					<li>
						<a
							href="#contact"
							class="text-lg text-light-text-secondary dark:text-dark-text-secondary hover:text-light-text-accent dark:hover:text-dark-text-accent transition-colors"
						>
							{t.nav.contact} .
						</a>
					</li>
				</ul>
			</nav>

			<!-- Settings and Mobile Menu -->
			<div class="flex items-center gap-4 flex-shrink-0">
				<div class="hidden md:flex flex-col gap-1">
					<ThemeToggle />
					<LanguageSwitch />
				</div>

				<!-- Mobile Menu Button -->
				<button
					id="mobile-menu-button"
					class="md:hidden text-light-text-primary dark:text-dark-text-primary p-2"
					aria-label="Toggle menu"
				>
					<svg
						id="menu-icon"
						xmlns="http://www.w3.org/2000/svg"
						class="h-6 w-6 transition-transform duration-200"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
					<svg
						id="close-icon"
						xmlns="http://www.w3.org/2000/svg"
						class="h-6 w-6 hidden transition-transform duration-200"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M6 18L18 6M6 6l12 12"></path>
					</svg>
				</button>
			</div>
		</div>
	</div>

	<!-- Mobile Menu -->
	<div
		id="mobile-menu"
		class="fixed top-20 right-0 bottom-0 w-[150px] md:hidden transform translate-x-full transition-transform duration-300 ease-in-out bg-light-surface-header dark:bg-dark-surface-header shadow-lg z-50 overflow-y-auto"
	>
		<div class="min-h-full flex flex-col">
			<nav class="px-6 py-2">
				<ul class="space-y-6">
					<li>
						<a
							href={`/${lang}/projects`}
							class="block text-light-text-secondary dark:text-dark-text-secondary hover:text-light-text-accent dark:hover:text-dark-text-accent"
						>
							{t.nav.projects}
						</a>
					</li>
					<li>
						<a
							href="#expertise"
							class="block text-light-text-secondary dark:text-dark-text-secondary hover:text-light-text-accent dark:hover:text-dark-text-accent"
						>
							{t.nav.expertise}
						</a>
					</li>
					<li>
						<a
							href="#about"
							class="block text-light-text-secondary dark:text-dark-text-secondary hover:text-light-text-accent dark:hover:text-dark-text-accent"
						>
							{t.nav.about}
						</a>
					</li>
					<li>
						<a
							href="#contact"
							class="block text-light-text-secondary dark:text-dark-text-secondary hover:text-light-text-accent dark:hover:text-dark-text-accent"
						>
							{t.nav.contact}
						</a>
					</li>
				</ul>
			</nav>
			<!-- Settings at Bottom -->
			<div
				class="border-t border-light-border-light dark:border-dark-border-light px-6 py-6 mt-auto"
			>
				<div class="flex flex-col gap-4">
					<div class="mobile-theme-toggle">
						<ThemeToggle />
					</div>
					<div class="mobile-lang-switch">
						<LanguageSwitch />
					</div>
				</div>
			</div>
		</div>
	</div>
</header>

<script>
	const mobileMenuButton = document.getElementById("mobile-menu-button");
	const mobileMenu = document.getElementById("mobile-menu");
	const menuIcon = document.getElementById("menu-icon");
	const closeIcon = document.getElementById("close-icon");

	function toggleMenu() {
		if (!mobileMenu || !menuIcon || !closeIcon) return;

		const isOpen = !mobileMenu.classList.contains("translate-x-full");

		// Toggle menu
		mobileMenu.classList.toggle("translate-x-full");

		// Toggle icons
		menuIcon.classList.toggle("hidden");
		closeIcon.classList.toggle("hidden");

		// Prevent body scroll when menu is open
		document.body.style.overflow = isOpen ? "" : "hidden";
	}

	if (mobileMenuButton && mobileMenu && menuIcon && closeIcon) {
		mobileMenuButton.addEventListener("click", (e) => {
			e.stopPropagation();
			toggleMenu();
		});

		// Close menu when clicking a link
		const links = mobileMenu.querySelectorAll("a");
		links.forEach((link) => {
			link.addEventListener("click", toggleMenu);
		});

		// Close menu when pressing Escape key
		document.addEventListener("keydown", (e) => {
			if (
				e.key === "Escape" &&
				!mobileMenu.classList.contains("translate-x-full")
			) {
				toggleMenu();
			}
		});
	}
</script>
